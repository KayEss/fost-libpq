
# Works around a bug in boost.build
project PostgreSQL : requirements -<threading>multi ;

rule pgdll ( libs * )
{
    lib $(libs) ;

    local prefix = "C:\\Program Files\\PostgreSQL\\8.3\\bin\\" ;
    local suffix = ".dll" ;

    for local curlib in $(libs)
    {
        local name = $(prefix) $(curlib) $(suffix) ;
        lib $(curlib) : : <file>$(name:J) <target-os>windows ;
    }

    install ../dist/bin : $(libs) ;
}

pgdll comerr32 gssapi32 k5sprt32 krb5_32 libiconv2 libintl3 libpq ;

